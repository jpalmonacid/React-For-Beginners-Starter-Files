/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  max-height 0
  padding 0 !important
  transform translateX(-120%)
  transition .5s
  &.order-enter-active
    max-height 60px
    padding 2rem 0 !important
    transform translateX(0)

.order-exit
  max-height 60px
  padding 2rem 0
  transform translateX(0)
  transition .5s
  &.order-exit-active
    max-height 0
    padding 0
    transform translateX(120%)

.count-enter
  transform translateY(100%)
  transition .5s
  &.count-enter-active
    transform translateY(0)

.count-exit
  position absolute
  left 0
  bottom 0
  transform translateY(0)
  transition .5s
  &.count-exit-active
    transform translateY(-100%)
